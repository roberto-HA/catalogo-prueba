<!DOCTYPE html>
<html>
  <head>
    <title>Catalogo</title>
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>

  <body>

  <% if notice %>
    <p class="alert-success"><%= notice %></p>
    <% end %>
  <% if  alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      logeado como <strong><%= current_user.email %></strong>.
      <%= link_to 'editar perfil', edit_user_registration_path, :class => 'navbar-link badge badge-primary' %>
      <%= link_to "sign out", destroy_user_session_path, method: :delete, :class => 'navbar-link  badge badge-secondary' %>
    <% else %>
      <%= link_to "sign up", new_user_registration_path, :class => 'navbar-link' %>
      <%= link_to "login", new_user_session_path, :class => 'navbar-link' %>
      <% end %>
      </p>
    <%= yield %>
  </body>
</html>
